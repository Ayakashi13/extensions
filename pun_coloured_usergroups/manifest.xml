<extension engine="1.0">
	<id>pun_coloured_usergroups</id>
	<title>pun_coloured_usergroups</title>
	<version>1.0.0</version>
	<description>description</description>
	<author>PunBB Development Team</author>

	<minversion>1.3</minversion>
	<maxtestedon>1.3.4</maxtestedon>
        
	<hooks>
		<hook id="in_users_online_qr_get_online_info"><![CDATA[

                    $query['SELECT'] .= ', u.group_id';
                    $query['JOINS'][] =   array(
                                                'LEFT JOIN'	=> 'users AS u',
                                                'ON'            => 'u.id=o.user_id'
                                        );

		]]></hook>

                <hook id="agr_add_edit_group_pre_basic_details_fieldset_end"><![CDATA[
                            ?>    <div class="sf-set set<?php echo ++$forum_page['item_count'] ?>">
					<div class="sf-box text required">
						<label for="fld<?php echo ++$forum_page['fld_count'] ?>"><span>Link Color</span></label><br />
						<span class="fld-input"><input type="text" id="fld<?php echo $forum_page['fld_count'] ?>" name="link_color" size="8" maxlength="8" value="<?php echo forum_htmlencode($group['link_color']) ?>" /></span>
					</div>
                                        <div class="sf-box text required">
						<label for="fld<?php echo ++$forum_page['fld_count'] ?>"><span>VLink Color</span></label><br />
						<span class="fld-input"><input type="text" id="fld<?php echo $forum_page['fld_count'] ?>" name="hover_color" size="8" maxlength="8" value="<?php echo forum_htmlencode($group['hover_color']) ?>" /></span>
					</div>
				</div><?php
		]]></hook>

                <hook id="agr_add_edit_end_validation"><![CDATA[
                            $link_color = forum_trim($_POST['link_color']);
                            $hover_color = forum_trim($_POST['hover_color']);
		]]></hook>

                <hook id="agr_add_end_qr_add_group"><![CDATA[
                            $query['INSERT'] .= ', link_color, hover_color';
                            $query['VALUES'] .= ',\''.$forum_db->escape($link_color).'\','.$forum_db->escape($hover_color).'\'';
		]]></hook>

                <hook id="agr_edit_end_qr_update_group"><![CDATA[
                            $query['SET'] .= ', link_color = \''.$forum_db->escape($link_color).'\', hover_color = \''.$forum_db->escape($hover_color).'\'';
		]]></hook>

                <hook id="in_users_online_pre_online_info_output"><![CDATA[
                            $users = array();
                            $result = $forum_db->query_build($query) or error(__FILE__, __LINE__);
                            while ($forum_user_online = $forum_db->fetch_assoc($result))
                            {
                                $users[] = ($forum_user['g_view_users'] == '1') ? '<span class="group_color_'.$forum_user_online['group_id'].'"> <a href="'.forum_link($forum_url['user'], $forum_user_online['user_id']).'">'.forum_htmlencode($forum_user_online['ident']).'</a></span>' : forum_htmlencode($forum_user_online['ident']);
                            };
		]]></hook>

                <hook id="in_start, agr_start"><![CDATA[
                           require $ext_info['path'].'/main.php';
                           cache_pun_coloured_usergroups();
                           
		]]></hook>

                <hook id="hd_head"><![CDATA[
                           $forum_head['style_pun_coloured_usergroups'] = '<link rel="stylesheet" type="text/css" media="screen" href="'.$ext_info['url'].'/styles.css.php" />';
		]]></hook>

                <hook id="agr_edit_end_edit_group, agr_add_edit_pre_redirect"><![CDATA[
                            cache_pun_coloured_usergroups();
		]]></hook>

                <hook id="vt_row_pre_post_ident_merge"><![CDATA[
                            if ($cur_post['poster_id'] > 1)
                                            $forum_page['post_ident']['byline'] = '<span class="post-byline">'.sprintf((($cur_post['id'] == $cur_topic['first_post_id']) ? $lang_topic['Topic byline'] : $lang_topic['Reply byline']), (($forum_user['g_view_users'] == '1') ? '<span class="group_color_'.$cur_post['g_id'].'"><a title="'.sprintf($lang_topic['Go to profile'], forum_htmlencode($cur_post['username'])).'" href="'.forum_link($forum_url['user'], $cur_post['poster_id']).'">'.forum_htmlencode($cur_post['username']).'</a></span>' : '<strong>'.forum_htmlencode($cur_post['username']).'</strong>')).'</span>';
                                    else
                                            $forum_page['post_ident']['byline'] = '<span class="post-byline">'.sprintf((($cur_post['id'] == $cur_topic['first_post_id']) ? $lang_topic['Topic byline'] : $lang_topic['Reply byline']), '<strong>'.forum_htmlencode($cur_post['username']).'</strong>').'</span>';

                ]]></hook>



                <hook id="ul_results_row_pre_data_output"><![CDATA[
                            $forum_page['table_row']['username'] = '<td class="tc'.count($forum_page['table_row']).'"><span class="group_color_'.$user_data['g_id'].'"><a href="'.forum_link($forum_url['user'], $user_data['id']).'">'.forum_htmlencode($user_data['username']).'</span></a></td>';
                ]]></hook>
          
                <hook id="pf_change_details_about_output_start"><![CDATA[
                            $forum_page['user_ident']['username'] = '<li class="username'.(($user['realname'] =='') ? ' fn nickname' :  ' nickname').'"><strong>'.forum_htmlencode($user['username']).'</strong></li>';
                ]]></hook>



        </hooks>
</extension>